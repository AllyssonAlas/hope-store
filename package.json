{
  "name": "hope-store",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Allysson Alas",
  "license": "MIT",
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.2.5",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.1.0",
    "prisma": "^4.10.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "start": "node -r dotenv/config dist/main",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "yarn eslint . --ext ts",
    "lint:fix": "yarn lint -- --fix",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:seed": "prisma db seed",
    "test:docker-up": "docker-compose -f docker-compose-test-db.yml up -d",
    "test:docker-down": "docker-compose -f docker-compose-test-db.yml down",
    "test": "DOTENV_CONFIG_PATH=./.env.test jest --setupFiles=dotenv/config --passWithNoTests --no-cache --runInBand",
    "test:coverage": "yarn test -- --coverage",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:watch": "yarn test -- --watch"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@types/supertest": "^2.0.12",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "rimraf": "^4.1.0",
    "supertest": "^6.3.3"
  },
  "prisma": {
    "schema": "src/infra/database/postgres/prisma/schema.prisma",
    "seed": "node dist/infra/database/postgres/helpers/seed.js"
  }
}
